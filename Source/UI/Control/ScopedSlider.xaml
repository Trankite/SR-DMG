<Slider
    x:Class="StarRailDamage.Source.UI.Control.ScopedSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StarRailDamage.Source.UI.Control">
    <Slider.Template>
        <ControlTemplate TargetType="{x:Type Slider}">
            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding Maximum,RelativeSource={RelativeSource Self}}" Value="0">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </ControlTemplate.Triggers>

            <Grid>
                <Grid.Resources>
                    <Style TargetType="{x:Type local:ScopedTextBlock}">
                        <Setter Property="Foreground" Value="{Binding Foreground,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                        <Setter Property="FontSize" Value="{Binding FontSize,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                        <Setter Property="FontWeight" Value="{Binding FontWeight,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="{Binding Padding.Left,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{Binding Padding.Right,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <local:ScopedTextBlock Grid.Column="0" MaxWidth="50" Text="{Binding Title.Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}" TipText="{Binding Title,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}" TipOnlyTrim="True" TextTrimming="CharacterEllipsis"/>

                <Border Grid.Column="2" Height="5" CornerRadius="5" Background="{TemplateBinding Background}"/>
                <Track Grid.Column="2" x:Name="PART_Track">
                    <Track.Resources>
                        <Style TargetType="{x:Type RepeatButton}">
                            <Setter Property="Height" Value="5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RepeatButton">
                                        <Border x:Name="PART_Border" Background="Transparent" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="PART_Border" Property="Background" Value="{Binding FocusBrush,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Track.Resources>

                    <Track.Thumb>
                        <Thumb Focusable="False" VerticalAlignment="Center">
                            <Thumb.Template>
                                <ControlTemplate TargetType="{x:Type Thumb}">
                                    <Ellipse Width="15" Height="15" Fill="{Binding FocusBrush,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedSlider}}}"/>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Track.Thumb>
                </Track>

                <local:ScopedTextBlock Grid.Column="4" Text="{Binding Value,ElementName=PART_Track,StringFormat={}{0:F0}}"/>
            </Grid>
        </ControlTemplate>
    </Slider.Template>
</Slider>