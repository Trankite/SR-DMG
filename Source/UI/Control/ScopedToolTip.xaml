<ToolTip
    x:Class="StarRailDamage.Source.UI.Control.ScopedToolTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StarRailDamage.Source.UI.Control">
    <ToolTip.Template>
        <ControlTemplate TargetType="{x:Type ToolTip}">
            <Border CornerRadius="{Binding CornerRadius,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedToolTip}}}" Background="{TemplateBinding Background}">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedToolTip}}}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedToolTip}}}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <TextBlock Text="{Binding Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedToolTip}}}" Margin="{TemplateBinding Padding}" Foreground="{TemplateBinding Foreground}" FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}"/>
            </Border>
        </ControlTemplate>
    </ToolTip.Template>
</ToolTip>