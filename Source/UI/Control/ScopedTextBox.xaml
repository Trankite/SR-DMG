<TextBox
    x:Class="StarRailDamage.Source.UI.Control.ScopedTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StarRailDamage.Source.UI.Control">
    <TextBox.Template>
        <ControlTemplate TargetType="{x:Type TextBox}">
            <Border x:Name="PART_Border" CornerRadius="{Binding CornerRadius,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedTextBox}}}" Background="{TemplateBinding Background}">
                <ScrollViewer Margin="{TemplateBinding Padding}" x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter TargetName="PART_Border" Property="Background" Value="{Binding FocusBrush,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedTextBox}}}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="PART_Border" Property="Background" Value="{Binding FocusBrush,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedTextBox}}}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </TextBox.Template>
</TextBox>