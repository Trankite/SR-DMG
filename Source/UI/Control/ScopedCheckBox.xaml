<UserControl
    x:Class="StarRailDamage.Source.UI.Control.ScopedCheckBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StarRailDamage.Source.UI.Control">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Grid Height="{TemplateBinding Height}">
                <Grid.Resources>
                    <Style TargetType="{x:Type local:ScopedTextBlock}">
                        <Setter Property="Foreground" Value="{Binding Foreground,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}"/>
                        <Setter Property="FontSize" Value="{Binding FontSize,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}"/>
                        <Setter Property="FontWeight" Value="{Binding FontWeight,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}"/>
                        <Setter Property="Margin" Value="{Binding Padding,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <local:ScopedButton Grid.Column="0" Width="{TemplateBinding Height}" Height="{TemplateBinding Height}" CornerRadius="5" Click="CheckedCharge">
                    <Image>
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="{StaticResource Image_UnSelect}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Flag,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}" Value="True">
                                        <Setter Property="Source" Value="{StaticResource Image_Selected}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </local:ScopedButton>

                <local:ScopedTextBlock Grid.Column="1" Text="{Binding Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}" TipText="{Binding Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}" TipOnlyTrim="True" TextTrimming="CharacterEllipsis" Margin="{TemplateBinding Padding}" VerticalAlignment="Center">
                    <local:ScopedTextBlock.Style>
                        <Style TargetType="{x:Type local:ScopedTextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource AncestorType={x:Type local:ScopedCheckBox}}}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </local:ScopedTextBlock.Style>
                </local:ScopedTextBlock>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>