<UserControl
    x:Class="StarRailDamage.Source.UI.Xaml.View.PercentSpan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StarRailDamage.Source.UI.Xaml.View"
    xmlns:Control="clr-namespace:StarRailDamage.Source.UI.Control">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Border CornerRadius="15" Background="{TemplateBinding Background}">
                <Grid Margin="10">
                    <Grid.Resources>
                        <Style TargetType="{x:Type Control:ScopedTextBlock}">
                            <Setter Property="Foreground" Value="{Binding Foreground,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}"/>
                            <Setter Property="FontSize" Value="{Binding FontSize,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Control:ScopedTextBlock Grid.Row="0" Text="{Binding Title.Text,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}" TipText="{Binding Title,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}" TipOnlyTrim="True" TextTrimming="CharacterEllipsis" FontWeight="Bold"/>
                    <Control:ScopedTextBlock Grid.Row="2" Text="{Binding Value,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}},StringFormat={}{0:F0}}"/>
                    <Control:ScopedTextBlock Grid.Row="4" Text="{Binding Percent,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}},StringFormat={}{0:+0.#%;-0.#%;0;}}" Foreground="{Binding TempBrush,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}" FontSize="{Binding DropFontSize,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}">
                        <Control:ScopedTextBlock.Style>
                            <Style TargetType="{x:Type Control:ScopedTextBlock}" BasedOn="{StaticResource {x:Type Control:ScopedTextBlock}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource Self}}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Control:ScopedTextBlock.Style>
                    </Control:ScopedTextBlock>
                </Grid>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>