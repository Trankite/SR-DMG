<UserControl
    x:Class="StarRailDamage.Source.UI.Xaml.View.PercentSpan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StarRailDamage.Source.UI.Xaml.View"
    xmlns:Control="clr-namespace:StarRailDamage.Source.UI.Control">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Border CornerRadius="15" Background="{TemplateBinding Background}">
                <UniformGrid Columns="1" Margin="10">
                    <UniformGrid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{Binding Foreground,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}"/>
                            <Setter Property="FontSize" Value="{Binding FontSize,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}"/>
                            <Setter Property="FontWeight" Value="{Binding FontWeight,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </UniformGrid.Resources>

                    <TextBlock Text="{Binding Title,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}" TextTrimming="CharacterEllipsis">
                        <TextBlock.ToolTip>
                            <Control:ScopedToolTip Text="{Binding PlacementTarget.Text,RelativeSource={RelativeSource Self}}"/>
                        </TextBlock.ToolTip>
                    </TextBlock>
                    <TextBlock Text="{Binding Value,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}},StringFormat={}{0:F0}}"/>
                    <TextBlock Text="{Binding Percent,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}},StringFormat={}{0:+0.#%;-0.#%;0;}}" Foreground="{Binding TempBrush,RelativeSource={RelativeSource AncestorType={x:Type local:PercentSpan}}}">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource Self}}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </UniformGrid>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>